<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="movie"
            type="com.kueski.marktest.business.model.Movie" />

        <variable
            name="clickListener"
            type="com.kueski.marktest.ui.adapter.MovieClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/company_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="6dp"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:onClick="@{() -> clickListener.movieClicked(movie)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/movie_poster_cardView"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.name}"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/movie_poster_cardView"
            app:layout_constraintStart_toStartOf="@+id/movie_poster_cardView"
            app:layout_constraintTop_toBottomOf="@+id/movie_poster_cardView"
            tools:text="Eternals" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/movie_name"
            app:layout_constraintTop_toBottomOf="@+id/movie_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.voteAvg.toString()}"
            android:textColor="#9C9C9C"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="8.1/10 IMDb" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>