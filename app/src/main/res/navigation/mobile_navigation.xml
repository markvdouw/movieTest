<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kueski.marktest.ui.discovery.MovieDiscoveryFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_discovery" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.kueski.marktest.ui.now_playing.NowPlayingFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_now_playing" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.kueski.marktest.ui.favourite_movies.FavouriteFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_favourites" />
</navigation>